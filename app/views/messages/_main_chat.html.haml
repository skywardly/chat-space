.main-chat
  .main-chat__group-info
    .main-chat__group__box
      .main-chat__group-info__box__group-name
        = @group.name
      %ul.main-chat__group-info__box__member
        Memberï¼š
        - @group.users.each do |user|
          %li
            = user.name
    = link_to "./edit", class: "" do
      .main-chat__group-info--edit
        Edit
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    .form
      = form_for [@group, @message] do |f|
        .form__box
          .input__box
            = f.text_field :content, class: 'input__box__text', placeholder: 'type a message'
            = f.label :image, class: 'input__box__image' do
              = icon('fas', 'image fa-lg')
              = f.file_field :image, class: 'input__box__image__select'
          = f.submit 'Send', class: 'input__box__submit'
.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      %h3.side-bar__user-name__box__text
        = current_user.name
      %ul.side-bar__user-name__box__icon
        %li.side-bar__user-name__box__icon__list
          = link_to new_group_path, class: "" do
            = icon('far', 'edit')
        %li.side-bar__user-name__box__icon__list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__list
        .group
          = link_to group_messages_path(group) do
            .side-bar__group__list__name
              = group.name
            .side-bar__group__list__new
              = group.show_last_message
